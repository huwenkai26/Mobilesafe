<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huwenkai.com.mobilesafe.Activity.Setup1Activity">

    <TextView
        style="@style/TitleStyle"

        android:text="4,恭喜你设置完成" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <CheckBox
          android:id="@+id/cb_mobilesafe_flag"
          android:text="防盗保护已关闭"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
  </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@android:drawable/presence_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:src="@drawable/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/bt_set_over"
            style="@style/Nextpage"
            android:text="设置完成" />
        <Button
            android:id="@+id/bt_prepage_4"
            style="@style/Prepage" />
    </RelativeLayout>



</LinearLayout>
