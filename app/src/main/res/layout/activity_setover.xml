<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/TitleStyle"
        android:text="设置完成"
         />
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_safe_number"
            android:text="安全号码"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:text="0000"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@drawable/listview_divider"
            android:layout_below="@id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_safe_falg"
            android:text="防盗是否开启"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/iv_lock"
            android:background="@drawable/lock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:background="@drawable/listview_divider"
            android:layout_below="@id/tv_safe_falg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />
    </RelativeLayout>
    <TextView
        android:textColor="#000"
        android:id="@+id/tv_reset_setup"
        android:text="重新进入设置向导"
        android:textSize="18sp"
        android:background="@drawable/selector_reset_setup_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/listview_divider"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:textColor="#000"
        android:text="功能简介"
        android:textSize="18sp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="GPS追踪:#*location*#"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="播放报警音乐:#*alarm*#"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="远程销毁数据#*wipedata*#"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="远程锁屏:#*lockscreen*#"
        android:textColor="#000"
        android:textSize="20dp" />
</LinearLayout>