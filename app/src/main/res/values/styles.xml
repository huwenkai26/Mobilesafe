<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
    </style>
    <!--  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0f0"
        android:gravity="center"
        android:padding="10dp"
        android:text="功能列表"
        android:textColor="#000"
        android:textSize="25dp"-->
    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#0f0</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">25dp</item>
    </style>
    <!-- android:id="@+id/bt_nextpage"
            android:background="@drawable/selector_btn_next"
            android:text="下一页"
            android:drawableRight="@drawable/next"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"-->
    <style name="Nextpage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_btn_next</item>
        <item name="android:text">下一页</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="Prepage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_btn_next</item>
        <item name="android:text">上一页</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
</resources>
